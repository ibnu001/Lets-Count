<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vertical_polos_baloon"
    android:paddingHorizontal="25dp"
    android:paddingVertical="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_lets_count"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/icon_lets_count_hd"
                    android:elevation="15dp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_alignBottom="@+id/icon_lets_count"
                    android:layout_toLeftOf="@+id/icon_lets_count"
                    android:background="@drawable/angka_4"
                    android:elevation="15dp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/icon_lets_count"
                    android:layout_toRightOf="@+id/icon_lets_count"
                    android:background="@drawable/angka_5"
                    android:elevation="15dp" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@id/tabTentang"
                    android:layout_alignLeft="@+id/tabBerlatih"
                    android:background="@drawable/bebek"
                    android:elevation="15dp" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@id/tabTentang"
                    android:layout_alignRight="@+id/tabBerlatih"
                    android:background="@drawable/ayam"
                    android:elevation="15dp" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@id/tabTentang"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40sp"
                    android:background="@drawable/kelinci"
                    android:elevation="15dp" />

                -- button angka

                <ImageView
                    android:id="@+id/image_view_mengenal_angka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_lets_count"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/menu_angka"
                    android:layout_marginTop="50dp" />

                <Button
                    android:id="@+id/button_tab_angka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_view_mengenal_angka"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_screen_bg"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:fontFamily="@font/baloon_font"
                    android:paddingVertical="7dp"
                    android:text="ANGKA"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                -- button penjumlahan

                <ImageView
                    android:id="@+id/image_view_penjumlahan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button_tab_angka"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/menu_jumlah"
                    android:layout_marginTop="25dp" />

                <Button
                    android:id="@+id/button_tab_penjumlahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_view_penjumlahan"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_screen_bg"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:fontFamily="@font/baloon_font"
                    android:paddingVertical="7dp"
                    android:text="PENJUMLAHAN"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                -- button pengurangan

                <ImageView
                    android:id="@+id/image_view_pengurangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button_tab_penjumlahan"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/menu_kurang"
                    android:layout_marginTop="25dp" />

                <Button
                    android:id="@+id/button_tab_pengurangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_view_pengurangan"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_screen_bg"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:fontFamily="@font/baloon_font"
                    android:paddingVertical="7dp"
                    android:text="PENGURANGAN"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                -- button berlatih

                <ImageView
                    android:id="@+id/image_view_berlatih"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button_tab_pengurangan"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/menu_berlatih"
                    android:layout_marginTop="25dp" />

                <Button
                    android:id="@+id/tabBerlatih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_view_berlatih"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_screen_bg"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:fontFamily="@font/baloon_font"
                    android:paddingVertical="7dp"
                    android:text="BERLATIH"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                // button tentang

                <Button
                    android:id="@+id/tabTentang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tabBerlatih"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_screen_bg"
                    android:elevation="10dp"
                    android:fontFamily="@font/baloon_font"
                    android:paddingHorizontal="30dp"
                    android:text="Tentang Aplikasi"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
