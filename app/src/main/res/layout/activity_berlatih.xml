<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vertical_polos_fix"
    android:paddingHorizontal="25dp"
    tools:context=".BerlatihActivity">

    <TextView
        android:id="@+id/text_view_ayo_berlatih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:elevation="10dp"
        android:fontFamily="@font/baloon_font"
        android:gravity="center"
        android:text="AYO BERLATIH"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="55sp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/angka_6"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40sp"
        android:layout_above="@+id/relative_layout_berhitung"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/angka_7"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40sp"
        android:layout_above="@+id/relative_layout_berhitung"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/anjing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:layout_below="@+id/relative_layout_berhitung"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/semangka"
        android:layout_alignLeft="@+id/relative_layout_berhitung"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/relative_layout_berhitung"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/strawberry"
        android:layout_alignRight="@+id/relative_layout_berhitung"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/relative_layout_berhitung"/>

    <RelativeLayout
        android:id="@+id/relative_layout_berhitung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_tab_berhitung"
        android:paddingHorizontal="50dp"
        android:paddingVertical="25dp">

        <TextView
            android:id="@+id/text_view_judul_berhitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="5dp"
            android:fontFamily="@font/baloon_font"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Berhitung"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/text_view_highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_judul_berhitung"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/baloon_font"
            android:text="Highscore: 0"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_mulai_berhitung"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_highscore"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_button_mulai"
            android:elevation="5dp"
            android:fontFamily="@font/baloon_font"
            android:paddingVertical="8dp"
            android:text="MULAI"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloon_font"
        android:text="â—€ "
        android:paddingVertical="9dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_screen_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textSize="30sp"/>
</RelativeLayout>