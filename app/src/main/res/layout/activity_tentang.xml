<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vertical_polos_fix"
    android:padding="16dp"
    tools:context=".TentangActivity">

    <TextView
        android:id="@+id/text_view_tentang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloon_font"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="Tentang Aplikasi"
        android:textColor="@color/white"
        android:textSize="45sp"/>

    <Button
        android:id="@+id/button_kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloon_font"
        android:text="â—€ "
        android:paddingVertical="9dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_screen_bg"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/button_kembali"
        android:layout_below="@+id/text_view_tentang">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:verticalScrollbarPosition="right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_lets_count_tentang"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/icon_lets_count_hd"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/text_view_desk_tentang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="@string/tentang"
                    android:layout_below="@+id/icon_lets_count_tentang"
                    android:fontFamily="@font/baloon_font"
                    android:layout_marginTop="30dp"
                    android:paddingHorizontal="20dp"
                    android:justificationMode="inter_word"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/logo_bsi_tentang"
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/logo_bsi"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/text_view_desk_tentang"/>

                <TextView
                    android:id="@+id/developer_tentang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="@color/white"
                    android:text="Developer"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/logo_bsi_tentang"
                    android:fontFamily="@font/baloon_font"
                    android:layout_marginTop="40dp"
                    android:paddingHorizontal="20dp"
                    android:justificationMode="inter_word"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/ibnu_tentang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="Muhammad Ibnu Al Yazzar \n13180749"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/developer_tentang"
                    android:fontFamily="@font/baloon_font"
                    android:layout_marginTop="30dp"
                    android:paddingHorizontal="20dp"
                    android:justificationMode="inter_word"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="80dp"/>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>