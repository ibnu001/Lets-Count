<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appletscount">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_lets_count_hd"
        android:label="Let&apos;s Count"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity android:name=".TentangActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BerhitungActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BerlatihActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".AngkaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PenjumlahanActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PenguranganActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>